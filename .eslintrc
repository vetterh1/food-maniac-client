{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "plugins": [
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "rules": {
     "no-console": 1,
     "no-multiple-empty-lines": 0,
     "linebreak-style": 0,
     "eol-last": 0,
     "indent": [1, 2],
     "comma-dangle": [1, "always-multiline"],
     "no-underscore-dangle" : 0,
     "max-len": [1, 180, 4],
     "arrow-body-style": [0],
     "react/jsx-no-bind": [0],
     "import/imports-first": 0,
     "import/no-extraneous-dependencies": 1,
     "import/no-unresolved": [0] // Until import plugin supports webpack 2 resolveModules
  }
}
