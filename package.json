{
  "name": "food-maniac",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "ava",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "npm run build && webpack-dev-server --inline --content-base dist --history-api-fallback",
    "start:prod": "npm run build && node server/server.js",
    "build": "npm run build:cp_css && webpack",
    "build:cp_css": "if-env OS=Windows_NT && copy .\\app\\index.css dist || cp ./app/index.css dist",
    "pm2:restart": "pm2 restart maptest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cuid": "^1.3.8",
    "express": "^4.14.0",
    "google-maps-react": "^1.0.18",
    "if-env": "^1.0.0",
    "mongoose": "^4.6.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-fontawesome": "^1.2.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.0.0",
    "redux": "^3.6.0",
    "sanitize-html": "^1.13.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-core": "^6.5.1",
    "babel-loader": "^6.2.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "html-webpack-plugin": "^2.22.0",
    "http-server": "^0.8.5",
    "mockgoose": "^6.0.8",
    "redux-devtools": "^3.3.1",
    "supertest": "^2.0.0",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.15.1"
  },
  "ava": {
    "files": [
      "client/**/*.spec.js",
      "server/**/*.spec.js"
    ],
    "source": [
      "client/**/*.js",
      "server/**/*.js"
    ],
    "failFast": true,
    "babel": "inherit",
    "require": [
      "./server/util/setup-test-env.js"
    ]
  }
}
